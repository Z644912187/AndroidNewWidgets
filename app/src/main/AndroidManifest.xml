<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.com.bottomsheets">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/bottomsheet_activity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="android.com.corrdinatorlayout.CoordinatorLayoutActivity"
            android:label="@string/coordiator_activity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="android.com.collapsingtoolbar.CollapsingActivity"
            android:label="@string/title_activity_collapsing_toolbar_layout"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="android.com.navigation.NavigationViewActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>
